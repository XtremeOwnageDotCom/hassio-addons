{
  "name": "OmniLink Bridge",
  "version": "1.1.6",
  "slug": "omnilink-bridge",
  "description": "MQTT bridge, web service API, time sync, and logging for HAI/Leviton OmniPro II controllers",
  "url": "https://github.com/excaliburpartners/OmniLinkBridge",
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "startup": "services",
  "boot": "auto",
  "options": {
    "controller_address": null,
    "controller_port": 4369,
    "controller_key1": null,
    "controller_key2": null,
    "controller_name": "OmniLinkBridge",
    "time_sync": false,
    "time_interval": 60,
    "time_drift": 10,
    "webapi_enabled": false,
    "webapi_port": 8000,
    "mqtt_enabled": false,
    "mqtt_server": "localhost",
    "mqtt_port": 1883,
    "mqtt_username": "",
    "mqtt_password": "",
    "mqtt_prefix": "omnilink",
    "mqtt_discovery_prefix": "homeassistant"
  },
  "schema": {
    "controller_address": "str",
    "controller_port": "port",
    "controller_key1": "str",
    "controller_key2": "str",
    "controller_name": "str",
    "time_sync": "bool",
    "time_interval": "int",
    "time_drift": "int",
    "webapi_enabled": "bool",
    "webapi_port": "int",
    "mqtt_enabled": "bool",
    "mqtt_server": "str",
    "mqtt_port": "port",
    "mqtt_username": "str",
    "mqtt_password": "str",
    "mqtt_prefix": "str",
    "mqtt_discovery_prefix": "str",
    "mqtt_discovery_name_prefix": "str?",
    "mqtt_discovery_ignore_zones": "str?",
    "mqtt_discovery_ignore_units": "str?",
    "mqtt_discovery_override_zone": "str?"
  },
  "ports": {
    "8000/tcp": 8000
  },
  "map": ["config:rw"]
}